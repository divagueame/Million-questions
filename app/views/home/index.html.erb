
<div class="mx-auto w-1/2">
  <% if current_user %>
      <div class="mt-32">
        <% if current_user.game.ended %>
          <%= link_to 'Review your last game', game_report_path,
            class: "text-orange-400 bg-white border-2 border-orange-200 hover:border-orange-500 rounded-sm shadow-sm block py-4 px-10 text-center text-2xl
            " %>
        <% else %>

        <h1 class="font-bold text-4xl text-center mb-12">Let's play</h1>
          <%= link_to 'Start game!', game_path,
            class: "bg-orange-400 hover:bg-orange-500 rounded-sm shadow-sm block py-4 px-10 text-center text-2xl
            " %>
        <% end %>

      </div>

  <% else %>
    <h1 class="font-bold text-4xl text-center mb-12">Log in to start a game</h1>
      <div class="flex justify-around">
        <%= link_to "Sign up", new_user_registration_path, class: "btn bg-yellow-100 hover:bg-white px-10 py-5 text-2xl shadow-md hover:shadow-md rounded-lg" %>
        <%= link_to "Log in", new_user_session_path, class:  "btn bg-white hover:bg-green-200 px-10 py-5 text-2xl shadow-md hover:shadow-md rounded-lg"  %>
      </div>
  <% end %>
</div>
